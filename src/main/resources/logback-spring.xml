<configuration>
    <!-- 从 Spring 环境读取服务名与环境标识 -->
    <springProperty name="APP_NAME" source="spring.application.name" defaultValue="qiaoya-community"/>
    <springProperty name="ENV" source="spring.profiles.active" defaultValue="dev"/>

    <!-- 结构化 JSON 输出到 stdout，供 Promtail 采集 -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"${APP_NAME}","env":"${ENV}"}</customFields>
            <!-- 自动包含所有 MDC 字段：requestId, userId, ip, uri -->
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>ip</includeMdcKeyName>
            <includeMdcKeyName>uri</includeMdcKeyName>
            <!-- 请求时序字段：开始/结束时间与耗时（毫秒） -->
            <includeMdcKeyName>requestStartAt</includeMdcKeyName>
            <includeMdcKeyName>requestEndAt</includeMdcKeyName>
            <includeMdcKeyName>durationMs</includeMdcKeyName>
        </encoder>
    </appender>

    <!-- JSON 文件输出（仅本地开发环境） -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/qiaoya-community.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 日志文件命名格式：qiaoya-community-2025-01-13.0.log -->
            <fileNamePattern>logs/qiaoya-community-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- 单个文件最大 100MB -->
            <maxFileSize>100MB</maxFileSize>
            <!-- 保留最近 7 天的日志 -->
            <maxHistory>30</maxHistory>
            <!-- 所有日志文件总大小不超过 1GB -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"${APP_NAME}","env":"${ENV}"}</customFields>
            <!-- 自动包含所有 MDC 字段：requestId, userId, ip, uri -->
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>ip</includeMdcKeyName>
            <includeMdcKeyName>uri</includeMdcKeyName>
            <!-- 请求时序字段：开始/结束时间与耗时（毫秒） -->
            <includeMdcKeyName>requestStartAt</includeMdcKeyName>
            <includeMdcKeyName>requestEndAt</includeMdcKeyName>
            <includeMdcKeyName>durationMs</includeMdcKeyName>
        </encoder>
    </appender>

    <!-- 可选：按需开启异步（吞吐大时建议） -->
    <appender name="ASYNC_JSON" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>8192</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
        <appender-ref ref="JSON_CONSOLE"/>
    </appender>

    <!-- 本地开发环境：输出到控制台 + 文件 -->
    <springProfile name="dev,local">
        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
            <appender-ref ref="JSON_FILE"/>
        </root>
    </springProfile>

    <!-- 生产/测试环境：只输出到控制台（由 Docker 容器捕获） -->
    <springProfile name="prod,test">
        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
            <!-- 吞吐较大可切换为 ASYNC_JSON -->
            <!-- <appender-ref ref="ASYNC_JSON"/> -->
        </root>
    </springProfile>
</configuration>
